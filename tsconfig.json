    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["esnext", "dom"],
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "**/__tests__/**/*.{js,ts,tsx}",
    "**/*.spec.{js,ts,tsx}"
  ]
}
