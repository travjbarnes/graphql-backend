type Person {
    id: ID! @unique
    email: String! @unique
    createdAt: DateTime!
    password: String!
    name: String!
    confirmationCode: String
    emailConfirmed: Boolean!
    passwordResetCode: String
    resetCodeValidUntil: DateTime!
    groups: [Group!]
    pushTokens: [PushToken!]
}

# This is a separate model so that we can delete a given push token without needing to know the 
# person it belongs to. This is useful if e.g. we start getting errors because a given token is no longer valid.
type PushToken {
    id: ID! @unique
    person: Person!
    token: String! @unique
}

type Group {
    id: ID! @unique
    name: String! @unique
    createdAt: DateTime!
    description: String
    members: [Person!]
    threads: [Thread!]
}

type Thread {
    id: ID! @unique
    createdAt: DateTime!
    title: String!
    posts: [Post!]!
    group: Group!
    pinned: Boolean!
}

type Post {
    id: ID! @unique
    createdAt: DateTime!
    author: Person!
    content: String!
    thread: Thread!
    firstPost: Boolean!  # used by subscriptions to distinguish new threads from new posts
}
